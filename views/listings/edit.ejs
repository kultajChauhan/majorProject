<% layout("layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit a Listing</h2>
            <form method="post" action="/listing/<%=listing._id%>?_method=put">
                <div class="mb-3">
                    <label for="title" class="form-label">Titel : </label>
                    <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description : </label>
                    <textarea name="listing[description]" type="text"
                        class="form-control"><%=listing.description%></textarea>
                </div>



                <div class="mb-3">
                    <label for="image" class="form-label">Image : </label>
                    <input type="text" name="listing[image]" value="<%=listing.image.url%>" class="form-control">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price : </label>
                        <input type="number" name="listing[price]" value="<%=listing.price%>" class="form-control">
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country : </label>
                        <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control">
                    </div>
                </div>


                <div class="mb-3">
                    <label for="location" class="form-label">Location : </label>
                    <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control">
                </div>

                <button class="btn btn-dark edit-btn mt-3 border-0">edit</button>
            </form>
        </div>
    </div>